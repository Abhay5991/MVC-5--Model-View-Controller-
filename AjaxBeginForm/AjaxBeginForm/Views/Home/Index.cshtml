@model AjaxBeginForm.Models.Emplopyee
@{
    ViewBag.Title = "Index";
}
<div style="display:none" id="loader">
    
    <img src="~/Content/ajax-loader-gif-5.gif" height="100" width="200" />

</div>

@using (Ajax.BeginForm("Index", new AjaxOptions()
{
    OnSuccess = "fnSuccess",
    OnFailure = "fnFailure",
    HttpMethod ="POST",
    LoadingElementId = "loader",
    LoadingElementDuration = 2000
    

}))
{
<div>
    @Html.EditorFor(x => x.FirstName) <br /><br />
    @Html.EditorFor(x => x.LastName) <br /><br />
    @Html.EditorFor(x => x.Email) <br /><br />

    <input type="submit" value="Click Me" />
</div>
}
<script>
    function fnSuccess(data) {
        console.log(data);
        alert("Hello From Success");

    }

    function fnFailure(err) {
        console.log(err);
        alert("Hello From Error");
    }
</script>
